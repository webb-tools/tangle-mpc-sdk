{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015"
  },
  "include": [
    "./src/**/*.ts",
    "./node_modules/@polkadot/api",
    "./node_modules/@webb-tools/tangle-substrate-types"
  ],
  "exclude": ["node_modules", "**/node_modules/*"]
}
